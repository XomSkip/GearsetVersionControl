<apex:page standardController="Opportunity"
    recordSetVar="opportunities"
    showHeader="false"
    id="muopp"
    lightningStylesheets="true"
>
    <apex:form id="muform">
        <apex:pageBlock title="Opportunity Mass Update Stage" mode="edit" id="mub1">
            <apex:pageMessages />
            <apex:pageBlockSection id="mus1" columns="1">
                <apex:inputField value="{!opportunity.stagename}" id="stagename" required="true">
                    <apex:actionSupport event="onchange" rerender="muselectedlist"/>
                </apex:inputField>
                <apex:inputField value="{!opportunity.Loss_Reason__c}" id="lossreason" required="TRUE">
                    <apex:actionSupport event="onchange" rerender="muselectedlist"/>
                </apex:inputField>
                <apex:inputField value="{!opportunity.Sub_Loss_Reason__c}" id="sublossreason" required="TRUE">
                    <apex:actionSupport event="onchange" rerender="muselectedlist"/>
                </apex:inputField>
                <apex:inputField value="{!opportunity.Loss_Reason_Detail__c}" id="lossdetail">
                    <apex:actionSupport event="onchange" rerender="muselectedlist"/>
                </apex:inputField>
                <apex:inputField value="{!opportunity.CloseDate}" id="closedate">
                    <apex:actionSupport event="onchange" rerender="muselectedlist"/>
                </apex:inputField>
            </apex:pageBlockSection>
            <apex:pageBlockButtons location="bottom" id="mubut">
                <apex:commandButton value="Save" action="{!save}" id="butsav"/>
                <apex:commandButton value="Cancel" action="{!cancel}" id="butcan"/>
            </apex:pageBlockButtons>
        </apex:pageBlock>
        <apex:pageBlock title="Selected Opportunities" id="muselectedlist">
            <apex:pageBlockTable value="{!selected}" var="opp" id="mutab">
                <apex:column value="{!opp.name}" id="oppname"/>
                <apex:column value="{!opp.account.name}" id="acctname"/>
                <apex:column value="{!opp.Primary_Contact__r.name}" id="primarycontact" headerValue="Primary Contact"/>
                <apex:column value="{!opp.stagename}" id="oppstage"/>
                <apex:column value="{!opp.closedate}" id="closedatelist"/>
                <apex:column value="{!opp.amount}" id="amount"/>
                <apex:column value="{!opp.createddate}" id="createddate"/>
                <apex:column value="{!opp.owner.name}" id="ownername" headerValue="Opportunity Owner"/>
            </apex:pageBlockTable>
        </apex:pageBlock>
    </apex:form>
</apex:page>