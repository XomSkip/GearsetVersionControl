<?xml version="1.0" encoding="utf-8"?>
<ValidationRule xmlns="http://soap.sforce.com/2006/04/metadata">
    <fullName>Resource_Pricing_Required</fullName>
    <active>true</active>
    <errorConditionFormula>AND(ISPICKVAL(Cancellation_Reason__c, 'Pricing'),
ISBLANK(Revised_Partner_Price__c),
RecordType.Name ='Re-Source Request',$Permission.Ignore_All_VR =FALSE)</errorConditionFormula>
    <errorMessage>Please submit a Revised Partner Price. Cancellation cannot be Pricing without a Revised Partner Price.</errorMessage>
</ValidationRule>
