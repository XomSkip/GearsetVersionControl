<?xml version="1.0" encoding="utf-8"?>
<ValidationRule xmlns="http://soap.sforce.com/2006/04/metadata">
    <fullName>Users_cant_Assign_Cases_to_Sales_Queue</fullName>
    <active>true</active>
    <description>Users can't Assign Cases to Sales Queue</description>
    <errorConditionFormula>((ISNEW() || ISCHANGED(OwnerId)) &amp;&amp;
OwnerId = '00G3u000002CPQe') 
&amp;&amp;

($User.Id != '0053u000004K3dSAAS' 
||
$User.Id != '0056A000002S1sMQAS')

&amp;&amp;
(!$Permission.SalesCase &amp;&amp;
!$Permission.Ignore_All_VR)</errorConditionFormula>
    <errorMessage>Users can't Assign Cases to Sales Queue. Please contact your manager.</errorMessage>
</ValidationRule>
