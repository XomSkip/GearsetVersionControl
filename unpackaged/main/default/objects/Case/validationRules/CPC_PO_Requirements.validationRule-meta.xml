<?xml version="1.0" encoding="utf-8"?>
<ValidationRule xmlns="http://soap.sforce.com/2006/04/metadata">
    <fullName>CPC_PO_Requirements</fullName>
    <active>false</active>
    <errorConditionFormula>AND(ISPICKVAL(Category__c, 'PO'),
OR(ISBLANK(PO_Amount__c),NOT(ISPICKVAL(Stalled_PO__c,""))),
RecordType.Name ='General Support Case',$Permission.Ignore_All_VR =FALSE)</errorConditionFormula>
    <errorMessage>PO Amount and Stalled PO fields can not be blank on cases where the category is PO, PO 2nd Review, PO confirmation, or PO Revision.</errorMessage>
</ValidationRule>
