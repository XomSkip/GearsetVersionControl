<?xml version="1.0" encoding="utf-8"?>
<ValidationRule xmlns="http://soap.sforce.com/2006/04/metadata">
    <fullName>Must_Select_Root_Cause</fullName>
    <active>false</active>
    <description>must have Root Cause to close DFM case 
// SUPPORT-11208 // Disabled</description>
    <errorConditionFormula>AND(ISPICKVAL(Status,'Closed'),NOT(ISPICKVAL(Type,"Large Order Review")), ISBLANK(TEXT(RootCause__c)),  RecordType.Name ='DFM Case')&amp;&amp;$Permission.Ignore_All_VR =FALSE</errorConditionFormula>
    <errorDisplayField>RootCause__c</errorDisplayField>
    <errorMessage>Please select a value in the Root Cause field</errorMessage>
</ValidationRule>
