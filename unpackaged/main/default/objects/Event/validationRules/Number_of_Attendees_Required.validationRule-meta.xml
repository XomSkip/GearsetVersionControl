<?xml version="1.0" encoding="utf-8"?>
<ValidationRule xmlns="http://soap.sforce.com/2006/04/metadata">
    <fullName>Number_of_Attendees_Required</fullName>
    <active>true</active>
    <errorConditionFormula>((ISPICKVAL(Event_Status__c,"Completed")
&amp;&amp; (ISCHANGED(Event_Status__c) || ISNEW())

&amp;&amp; ISBLANK(Number_of_Attendees__c)))

||

(ISPICKVAL(Event_Status__c,"Completed")
&amp;&amp; (ISCHANGED(Number_of_Attendees__c) &amp;&amp; ISBLANK(Number_of_Attendees__c)))</errorConditionFormula>
    <errorMessage>Number of Attendees is required when setting the Event Status to Complete</errorMessage>
</ValidationRule>
