<?xml version="1.0" encoding="utf-8"?>
<ValidationRule xmlns="http://soap.sforce.com/2006/04/metadata">
    <fullName>Closed_Lost_Requires_Reason</fullName>
    <active>false</active>
    <description>When an Opportunity is set as 'Closed Lost', a reason must be set</description>
    <errorConditionFormula>AND(ISPICKVAL(StageName, "Closed Lost"),  ISBLANK(TEXT(Loss_Reason__c)))

&amp;&amp; !$Permission.Ignore_All_VR
&amp;&amp; !$Permission.Ignore_Opp_VR</errorConditionFormula>
    <errorDisplayField>Loss_Reason__c</errorDisplayField>
    <errorMessage>Please Select a Loss Reason</errorMessage>
</ValidationRule>
