<?xml version="1.0" encoding="utf-8"?>
<ValidationRule xmlns="http://soap.sforce.com/2006/04/metadata">
    <fullName>Close_Won_Supply_Opp_needs_Order_ID</fullName>
    <active>true</active>
    <description>Rep can't create Close Won opp without Order ID.</description>
    <errorConditionFormula>AND( RecordType.Name = 'Supplies', ISPICKVAL(StageName,'Closed Won'),    ISBLANK(Order_ERP_Xom_ID__c)) 
&amp;&amp; !$Permission.Ignore_All_VR
&amp;&amp; !$Permission.Ignore_Opp_VR</errorConditionFormula>
    <errorMessage>Can't Create Closed Won Opps without Order ID for Supply Opportunities.</errorMessage>
</ValidationRule>
