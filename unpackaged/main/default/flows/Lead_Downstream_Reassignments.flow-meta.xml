        <locationY>218</locationY>
        <connector>
            <targetReference>Reassign_Quotes</targetReference>
        </connector>
        <filterLogic>and</filterLogic>
        <filters>
            <field>OwnerId</field>
            <operator>EqualTo</operator>
            <value>
                <elementReference>PreviousOwnerId</elementReference>
            </value>
        </filters>
        <filters>
            <field>Status</field>
